%div
  %h2 Update answer
  = form_with model:[@question, @answer], local: true do |f|
    .form-group
      .form-group
        %label Name
        = f.text_field :name, class: "form-control"
      .form-group
        %label Content
        = f.text_area :content, class: "form-control"
      .text-center
        = f.submit "Update", class: "btn btn-primary"
  %end